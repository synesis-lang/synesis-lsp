  orcid-numbers        = {Komendantova, Nadejda/0000-0003-2568-6179 Martinez, Nain/0000-0001-9389-037X},
  researcherid-numbers = {Komendantova, Nadejda/AAI-1536-2021},
  unique-id            = {WOS:000579443800029},
}

@Article{martinez2024,
