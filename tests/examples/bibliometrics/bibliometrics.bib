  orcid-numbers        = {Bilinska-Reformat, Katarzyna/0000-0002-2484-9629 Wojcik-Jurkiewicz, Magdalena/0000-0001-7177-2540 Kinelski, Grzegorz/0000-0002-5768-463X Czarnecka, Marzena/0000-0003-0565-8357},
  researcherid-numbers = {Bilińska-Reformat, Katarzyna/CAG-5454-2022 Czarnecka, Marzena/ABG-3488-2021 Wójcik-Jurkiewicz, Magdalena/AAR-3285-2020 Sadowska, Beata/AFJ-0351-2022 Kinelski, Grzegorz/AAA-3088-2020},
