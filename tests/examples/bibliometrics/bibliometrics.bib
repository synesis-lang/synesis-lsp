}

@Article{andreadou2019,
  author    = {Andreadou, Tatiana and Kontaxakis, Dimitrios and Iakovou, Konstantina Vasiliki},
  journal   = {FRONTIERS IN ENERGY RESEARCH},
  title     = {Blue Energy Plants and Preservation of Local Natural and Cultural Resources},
  year      = {2019},
