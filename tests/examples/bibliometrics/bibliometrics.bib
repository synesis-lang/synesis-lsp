  eissn                = {1873-6777},
  groups               = {Bibliometria},
  orcid-numbers        = {Rodriguez Segura, Francisco Javier/0000-0002-3076-7515 Terrados, Julio/0000-0003-1720-7545 Munoz Ceron, Emilio/0000-0003-1499-3376 Osorio-Aravena, Juan Carlos/0000-0002-3780-1835},
  researcherid-numbers = {Frolova, Marina/F-3548-2016 Terrados, Julio/H-1170-2017 Munoz Ceron, Emilio/B-7536-2015 Osorio-Aravena, Juan Carlos/W-3542-2018},
