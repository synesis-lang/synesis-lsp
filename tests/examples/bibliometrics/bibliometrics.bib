@Article{stephanides2019b,
  author               = {Stephanides, Phedeas and Chalvatzis, Konstantinos J. and Li, Xin and Lettice, Fiona and Guan, Dabo and Ioannidis, Alexis and Zafirakis, Dimitris and Papapostolou, Christiana},
  journal              = {APPLIED ENERGY},
  title                = {The Social Perspective on Island Energy Transitions: Evidence from the Aegean Archipelago},
  year                 = {2019},
