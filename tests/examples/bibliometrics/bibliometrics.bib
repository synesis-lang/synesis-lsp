}

@Article{urbatsch2021a,
  author               = {Urbatsch, R. and Wang, Yu},
  journal              = {ENERGY RESEARCH & SOCIAL SCIENCE},
  title                = {Are Religious Individuals against Renewables? Exploring Religious Beliefs and Support for Government Investment in Energy Transitions in the United States},
  year                 = {2021},
  issn                 = {2214-6296},
  month                = nov,
  number               = {102283},
  volume               = {81},
  abstract             = {Religious values and beliefs influence many attitudes relating to the environment, suggesting that they are also likely to shape preferences over energy policy. Several years' responses from the General Social Survey, a large, nationally representative poll of United States adults, confirm that, in this context, the association between greater religiosity and lesser support for pro-environmental policy extends to questions of energy transition: more fervently religious respondents, and those who more fully endorse fundamentalist interpretations of the Christian Bible, are less likely to support government funding of developing alternative energy sources. This result holds even when accounting for respondents' broader attitudes towards environmental and science policy. The connection between religiosity on attitudes towards energy policy is more robust in some Christian traditions than others: among Catholics, though not Protestants, it appears even when controlling for broader ideological positions.},
