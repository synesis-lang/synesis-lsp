  journal   = {ENERGY EFFICIENCY},
  title     = {German \textexclamdowni\textquestiondownEnergiewende\textexclamdown/I\textquestiondowndifferent Visions for a (Nearly) Climate Neutral Building Sector in 2050},
  year      = {2019},
