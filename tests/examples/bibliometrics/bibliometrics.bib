@Article{tsuji2021,
  author               = {Tsuji, Takeshi and Sorai, Masao and Shiga, Masashige and Fujikawa, Shigenori and Kunitake, Toyoki},
  journal              = {GREENHOUSE GASES-SCIENCE AND TECHNOLOGY},
  title                = {Geological Storage of CO\textexclamdownsub{¿}{2}{¡}/Sub¿-N\textexclamdownsub{¿}{2}{¡}/Sub¿-O\textexclamdownsub{¿}{2}{¡}/Sub¿ Mixtures Produced by Membrane-Based Direct Air Capture (DAC)},
