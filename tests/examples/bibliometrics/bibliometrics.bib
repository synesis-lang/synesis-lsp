  author               = {Lazaroiu, Alexandra Catalina and Roscia, Mariacristina and Dancu, Vasile Sebastian and Balaban, Georgiana},
  journal              = {RENEWABLE ENERGY},
  title                = {Social Impact of Decarbonization Objectives through Smart Homes: Survey and Analysis},
