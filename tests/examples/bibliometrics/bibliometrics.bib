  orcid-numbers        = {Aquino, Thereza/0000-0003-4299-611X},
  researcherid-numbers = {Rebouças, Diego/KIH-9738-2024},
  unique-id            = {WOS:000850447400028},
}

@Article{arenasaquino2017,
  author    = {Arenas Aquino, Angel Raul and Matsumoto Kuwabara, Yasuhiro and Kleiche-Dray, Mina},
  journal   = {REVISTA INTERNACIONAL DE CONTAMINACION AMBIENTAL},
  title     = {Solar Energy and Margination. Analysis of the Social Perception on New Technologies for the Articulation of an Energy Transition in the Municipality of Nezahualcoyotl, Mexico},
