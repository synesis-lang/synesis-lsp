  researcherid-numbers = {Rudolph, David/ABF-3254-2020 Beauson, Justine/ABE-5626-2021 Laurent, Alexis/E-4747-2010},
  unique-id            = {WOS:001000127300001},
}

@Article{benard-sora2018,
  author               = {Benard-Sora, Fiona and Praene, Jean Philippe},
