  orcid-numbers        = {Komendantova, Nadejda/0000-0003-2568-6179 Matavel, Custodio Efraim/0000-0002-3800-7887 Lohr, Katharina/0000-0003-2691-9712 Yazdanpanah, Masoud/0000-0001-8610-0173 Sieber, Stefan/0000-0002-4849-7277},
  researcherid-numbers = {Löhr, Katharina/KCL-0431-2024 Komendantova, Nadejda/AAI-1536-2021 Matavel, Custodio Efraim/AAX-1675-2021 Yazdanpanah, Masoud/V-5353-2018},
