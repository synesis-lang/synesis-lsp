{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Synesis",
  "scopeName": "source.synesis",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#blocks" },
    { "include": "#fields" },
    { "include": "#strings" },
    { "include": "#bibrefs" },
    { "include": "#chains" },
    { "include": "#numbers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.synesis",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.synesis",
          "match": "\\b(PROJECT|SOURCE|ITEM|ONTOLOGY|TEMPLATE|FIELD|ORDERED|END|INCLUDE|BIBLIOGRAPHY|ANNOTATIONS|ONTOLOGY)\\b"
        },
        {
          "name": "keyword.other.synesis",
          "match": "\\b(REQUIRED|OPTIONAL|FORBIDDEN|BUNDLE)\\b"
        },
        {
          "name": "storage.type.synesis",
          "match": "\\b(QUOTATION|MEMO|CODE|CHAIN|TEXT|DATE|SCALE|ENUMERATED|ORDERED|TOPIC)\\b"
        }
      ]
    },
    "blocks": {
      "patterns": [
        {
          "name": "entity.name.type.synesis",
          "match": "^\\s*(PROJECT|SOURCE|ITEM|ONTOLOGY|TEMPLATE)\\s+.*$"
        }
      ]
    },
    "fields": {
      "patterns": [
        {
          "name": "variable.other.synesis",
          "match": "^\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*:"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.synesis",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.synesis",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "bibrefs": {
      "patterns": [
        {
          "name": "entity.name.tag.synesis",
          "match": "@[a-zA-Z0-9_-]+"
        }
      ]
    },
    "chains": {
      "patterns": [
        {
          "name": "keyword.operator.synesis",
          "match": "->"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.synesis",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    }
  }
}
